#include <iostream>
using namespace std;

int main() {
    int num;
    cout << "Введіть ціле число: ";
    cin >> num;

    cout << "Число до префіксної інкрементації: " << num << endl;
    cout << "Префіксна інкрементація: " << ++num << endl;
    cout << "Число після префіксної інкрементації: " << num << endl;

    cout << "Число до постфіксної декрементації: " << num << endl;
    cout << "Постфіксна декрементація: " << num-- << endl;
    cout << "Число після постфіксної декрементації: " << num << endl;

    return 0;
}
