#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Введіть ціле число: ";
    cin >> number;
    cout << "Залишок при діленні на 7: " << number % 7 << endl;

    int num1, num2;
    cout << "Введіть перше ціле число: ";
    cin >> num1;
    cout << "Введіть друге ціле число: ";
    cin >> num2;

    if (num2 != 0) {
        if (num1 % num2 == 0) {
            cout << num1 << " ділиться на " << num2 << " без залишку." << endl;
        } else {
            cout << num1 << " не ділиться на " << num2 << " без залишку." << endl;
        }
    } else {
        cout << "Ділення на нуль неможливе!" << endl;
    }

    cout << "Перше число " << (num1 % 2 == 0 ? "парне" : "непарне") << endl;
    cout << "Друге число " << (num2 % 2 == 0 ? "парне" : "непарне") << endl;

    return 0;
}
